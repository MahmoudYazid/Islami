<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.sebha_fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg3"
        android:paddingTop="20dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="اسلامي"

            android:textColor="#242424"
            android:textFontWeight="700"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <ImageView
            android:layout_marginTop="80dp"
            android:id="@+id/imageViewRadio"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/sebha_img_to_animate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

        </ImageView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="عدد التسبيحات"

            android:textColor="#242424"
            android:textFontWeight="700"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewRadio">

        </TextView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="30"
            android:padding="20dp"
            android:background="@drawable/number_of_tasbeeh"
            android:textColor="#242424"
            android:layout_marginHorizontal="100dp"
            android:textFontWeight="700"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

        </TextView>


        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="100dp"
            android:background="@drawable/number_of_tasbeeh"
            android:gravity="center"
            android:padding="20dp"

            android:text="سبحان الله"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>